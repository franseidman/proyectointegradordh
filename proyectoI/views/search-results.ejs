<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head')%>

<body>
	<!-- Header -->
	<%- include('./partials/headerLogueado.ejs')%>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<% if(products != ""){ %>
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>
			<% } %>
			<!-- Show the "ultimos" products -->
			<div class="row">
				<!-- Show the "ultimos" products -->
				<% if(products.length==0){ %>
					<div class="noresult"><p>No hay resultados</p></div>
				<% } %> 
					<% for(let i=0; i<products.length; i++){ %>
					  
						  
						<div class="col-12 col-sm-6 col-lg-3">
							<section class="product-box">
								<a href="/product/id/<%= products[i].id %> ">
									<figure class="product-box_image">
										<img src="/images/products/<%= products[i].imagen %>" alt="<%= products[i].nombre %>">
									</figure>
									<article class="product-box_data">
										<h2><%= products[i].nombre %></h2>
										<p><%= products[i].descripcion %></p>
										<p><%= products[i].comentariosproducto.length %><% if(products[i].comentariosproducto.length == 1){ %> Comentario <% } else {%> Comentarios<%}%></p>
									</article>
								</a>
							</section>
						</div>
						
					  
					<% } %> 
					
				
			</div>
		</div>
	</div>


  


	<!-- footer -->
	<%- include('./partials/footer.ejs')%>
	<!-- /footer -->
</body>

</html>