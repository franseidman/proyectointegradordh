<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head')%>

<body>
	<!-- Header -->
	<%- include('./partials/headerLogueado.ejs')%>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<div class="row">
				<!-- Show the "ultimos" products -->
				<ul>
					<% for(let i=0; i<products.length; i++){ %>
					  <li>
						  
						<div class="col-12 col-sm-6 col-lg-3">
							<section class="product-box">
								<a href="/product">
									<figure class="product-box_image">
										<img src="/images/products/<%= products[i].imagen %>" alt="<%= products[i].nombre %>">
									</figure>
									<article class="product-box_data">
										<h2><%= products[i].nombre %></h2>
										<p><%= products[i].descripcion %></p>
										<p>Comentarios: 12  [REVISAR]</p>
									</article>
								</a>
							</section>
						</div>
						
					  </li>
					<% } %> 
				</ul>
			</div>
		</div>
	</div>


  


	<!-- footer -->
	<%- include('./partials/footer.ejs')%>
	<!-- /footer -->
</body>

</html>