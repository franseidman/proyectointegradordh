<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head')%>
<style>
	@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@300&display=swap');
</style>
<style>
	@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap');
</style>
<body>
	<!-- Header -->
	<%- include('./partials/headerLogueado.ejs')%>
	<!-- /Header -->

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%= detalle.nombre %></h2> 
			<p class="product-detail-description">
				<a class="edit-prod" href="/product/edit">Editar</a>
				<form action="/product/delete/<%= detalle.id %>" method="POST">
					<button type="submit">Borrar</button>
				</form>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<div class="img-prod">
					<img src="images/products/<%= detalle.imagen %>" alt="Detalle Imagen">
					</div>
					<div class="product-detail-description-noedit">
					<p class="desc-prod">
						<%= detalle.descripcion %></p></div>
				</article>

				<div class="col-12 col-lg-4">
					<section class="comments">
							<ul>
							<% for(let i=0; i<detalle.comentariosproducto.length; i++){ %>
								<article>
									<img src="images/users/profile.jpg" alt="profile image">
									<div class="data">
										<p class="user">
										<strong> <a href="/profile"><%= detalle.comentariosproducto[i].usuariodelcomentario.username %></a> </strong>
										<%= detalle.comentariosproducto[i].comentario %></p>
									</div>
								</article>
							<% } %> 
							</ul>

					</section>
					<form class="form" action="/product" method="GET">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('./partials/footer.ejs')%>
	<!-- /footer -->

</body>	
</html>